<h1>All Posts</h1>

    

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>File</th>
            <th>Status</th>
            <th>Category</th>
            <th>Allow Comments</th>
            <th>View</th>
            <th>Date</th>
            
            <th>Edit</th>
            <th>Delete</th>
            
        </tr>
    </thead>
    <tbody>

        {{#each posts}}

        <tr>
            <td>{{id}}</td>
            <td>{{title}}</td>
            <td>
                <img class="img--small" src="/uploads/{{file}}" alt="Picture of a file">

            </td>
            <td>{{status}}</td>
            <td>{{category}}</td>
            <td>{{allowComments}}</td>
            <td><a href="/post/{{id}}">View</a></td>
            <th>{{generateDate date 'MMM Do YYYY'}}</th>
            
            <td><a href="/admin/posts/edit/{{id}}" class="btn btn-info">Edit</a></td>
            <td>

                <form action="/admin/posts/{{id}}?_method=DELETE" method="POST">
                    <button type="submit" class="btn-danger">DELETE</button>
                </form>

            </td>
            
        </tr>

        {{/each}}
    </tbody>
</table>