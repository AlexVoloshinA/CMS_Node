<h1>Comments</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Owner</th>
      <th scope="col">Date</th>
    </tr>
  </thead>
  <tbody>
    {{#each comments}}
        <tr>
            <td>{{id}}</td>
            <td>{{user.firstName}}</td>
            <td>{{generateDate date 'MMM Do YYYY'}}</td>
            <td>
                <form action="/admin/comments/delete/{{id}}?_method=DELETE" method="POST">
                    <button type="submit" class="btn btn-danger">DELETE</button>
                </form>
            </td>
        </tr>
    {{/each}}
  </tbody>
</table>